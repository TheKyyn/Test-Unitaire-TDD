{
    "name": "myweeklyallowance/app",
    "description": "Virtual wallet management for teenagers - TDD Project",
    "type": "project",
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "MyWeeklyAllowance\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MyWeeklyAllowance\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage"
    }
}
